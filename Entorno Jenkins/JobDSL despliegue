pipelineJob('ACME/Development/DEPLOY_ACME_IaaC_Terraform_AWS_GCP') {
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url("https://github.com/davidjapo/acme-iaac-aws-gcp-dev.git")
                    }
                    branches("master")
                    scriptPath('Jobs_Jenkinsfiles/acme_iaac_dev_apply.Jenkinsfile')
                }
            }
        }
    }
}

